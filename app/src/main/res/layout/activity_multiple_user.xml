<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.feedback.MultipleUser">
<ScrollView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:layout_editor_absoluteY="7dp"
    tools:layout_editor_absoluteX="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"
            android:id="@+id/ll_person_rating">

        </LinearLayout>
        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Overall Service by the Saloon"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/ov_service_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </RadioGroup>
        </LinearLayout>
        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggestions (Comments)"/>
        <customfonts.MyEditText
            android:id="@+id/suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">

            <customfonts.MyRegularText
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/btnformate"
                android:textAlignment="center"
                android:padding="14dp"
                android:textSize="16dp"
                android:textColor="#fff"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"/>

            <customfonts.MyRegularText
                android:layout_width="wrap_content"
                android:id="@+id/submit"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/btnformate"
                android:textAlignment="center"
                android:padding="14dp"
                android:layout_alignParentEnd="true"
                android:textSize="16dp"
                android:textColor="#fff"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
